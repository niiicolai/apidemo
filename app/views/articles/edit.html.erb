<div style="width:500px;margin:50px auto;border:1px solid #e5e5e5;padding: 40px;border-radius:3px;background:white;">
<h3>New article</h3>

<%= form_for @article do |f| %>

	<div class="form-group">
		<%= f.label :title %><br />
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :content %><br />
		<%= f.text_field :content, class: "form-control" %>
	</div>

	<div class="form-group">
	<%= f.submit 'update', class: "btn btn-default" %>
	</div>

<% end %>

</div>